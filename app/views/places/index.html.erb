<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <div class="row">
      <div class="col-12">
        <span class="float-left"><h1><%= link_to place.name, place_path(place) %></h1></span>
        <span class="float-right"><i><%= place.address %></i><br /><br /></span>
      </div>
    </div>
    <p><%= place.description %></p>
    <%# if place.user.present? %>
      <!--<small><%# place.user.email %></small>-->
    <%# end %>
    <div class="row">
      <div class="col-12">
        <div class="tag">
          <% if place.accessible? %>
            <span class="float-left"><i class="fa fa-check-square"></i>&nbsp;Accessible&nbsp;&nbsp;</span>
          <% end %>
          <% if place.single_use? %>
            <span class="float-left"><i class="fa fa-check-square"></i>&nbsp;Single Use&nbsp;&nbsp;</span>
          <% end %>
          <% if place.gender_neutral? %>
            <span class="float-left"><i class="fa fa-check-square"></i>&nbsp;Gender Neutral&nbsp;&nbsp;</span>
          <% end %>
        </div>
      </div>
    </div>
    <% if place.comments.present? %>
      <div class="row">
        <div class="col-12">
          <blockquote>
            <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %></b> - 
            <% end %>
            <%= place.comments.last.message %>
            <small><%# place.comments.last.user.email %></small>
          </blockquote>
        </div>
      </div>
    <% end %>

  </div>

<% end %>

<div class="pagination row">
  <%= paginate @places %>
</div>